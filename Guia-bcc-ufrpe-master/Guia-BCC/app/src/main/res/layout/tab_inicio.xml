<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tab_inicial">


    <TextView
        android:text="@string/boas_vindas"
        android:textSize="10pt"
        android:textColor="@color/pureDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/txtProximasAulas"
        android:layout_width="wrap_content"
        android:textColor="@color/pureDark"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:id="@+id/proximasAulas" />

    <ListView
        android:id="@+id/lvCursosTelaInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proximasAulas"
        android:layout_marginBottom="56dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5pt"
        android:layout_marginLeft="5pt"
        android:layout_below="@+id/textView">

        <ImageView
            android:id="@+id/ivFotoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:color/holo_blue_bright" />

        <TextView
            android:id="@+id/tvNomeUsuario"
            android:textSize="13pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:text="Nomedo usuÃ¡rio" />


    </LinearLayout>



</RelativeLayout>